{
  "scripts": {
    "build": "umi build",
    "dev": "umi dev",
    "lint": "npm run lint:es && npm run lint:style && npm run lint:ts",
    "lint:es": "eslint \"**/*.{mjs,js,jsx,ts,tsx}\"",
    "lint:fix": "npm run lint:es --fix && npm run lint:style --fix",
    "lint:style": "stylelint \"./src/**/*.{css,less,scss}\"",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{md,json}\""
  },
  "dependencies": {
    "@umijs/plugins": "4.0.0-rc.2",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "tailwindcss": "^3.0.23",
    "umi": "4.0.0-rc.5"
  },
  "devDependencies": {
    "eslint-plugin-tailwindcss": "^3.4.4",
    "lint-staged": "^12.3.4",
    "prefer-code-style": "^0.5.1",
    "typescript": "^4.5.5"
  }
}
